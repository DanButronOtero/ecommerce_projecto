@using AccessoPaso1.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h3> Productos</h3>
    <div class="container">
        <div class="row">
            @foreach (Producto producto in ViewBag.Listado)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="~/Content/img/productos/@producto.imgen" width="60" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@producto.nombre</h5>
                            <p class="card-text">@producto.descripcion</p>
                            <h5>$@producto.precio</h5>
                            <a href="@Url.Action("Agregar","Carro", new {id = producto.Id_producto})" class="btn btn-primary">Agregar al Carrito</a>
                        </div>
                    </div>
                </div>



            }

        </div>
    </div>
</div>

