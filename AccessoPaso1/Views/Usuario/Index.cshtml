
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

@{ 
    DateTime dia = DateTime.Now;
    var hora = dia.Hour;
    string mensaje = "";
    if (hora < 12)
    {
        mensaje = "Buenos dias: ";
    }
    if (hora >= 12)
    {
        mensaje = "Buenas tardes: ";
    }
    if (hora >= 19)
    {
        mensaje = "Buenas noches: ";
    }
    
}

<h2>@mensaje  </h2>

