                <div class="col-md-10">
                    @Html.EditorFor(model => model.ult_actualizacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ult_actualizacion, "", new { @class = "text-danger" })
