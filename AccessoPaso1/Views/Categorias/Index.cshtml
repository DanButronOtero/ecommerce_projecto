@model IEnumerable<AccessoPaso1.Models.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<div class="container">
    <h2>Categorias</h2>

    <p>
        @Html.ActionLink("Agregar Categoria", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_categoria }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id_categoria }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_categoria })
                </td>
            </tr>
        }

    </table>
</div>
